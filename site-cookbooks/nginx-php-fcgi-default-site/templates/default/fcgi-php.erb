server {
    listen 80;
    root   /var/www/html;
    index  index.html index.php;
    
    location / {
        try_files $uri /index.php;
    }
    location ^~ /index.php/ {
        try_files $uri /index.php;
    }
    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_param   SCRIPT_FILENAME  $document_root$fastcgi_script_name;
        fastcgi_pass    127.0.0.1:<%= node['php-spawn-fcgi']['port'] %>;
    }
    
    location ~ /\.ht {
      deny  all;
    }
}
